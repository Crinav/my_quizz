{% extends 'base.html.twig' %}

{% block title %}Membre{% endblock %}

{% block body %}
<div class="container">
    

    <table class="table">
        <tbody>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            
        </tbody>
    </table>
     {% if is_granted('ROLE_ADMIN') %}
        {% set path_edit = 'admin_user_edit' %}
     {% else %}
        {% set path_edit = 'user_edit' %}
     {% endif %}
<div class="text-center"><a href="{{ path(path_edit, {'id': user.id}) }}"><button class="btn btn-primary w-25">Editer</button></a></div>
    <div> {% if is_granted('ROLE_ADMIN') %}
<a href="{{ path('admin_user_index') }}">Revenir aux membres</a>
{% endif %}</div>
    <div class="mt-5">
    {{ include('user/_delete_form.html.twig') }}
    </div>
    </div>
{% endblock %}
